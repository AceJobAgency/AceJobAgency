@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="display-4 mb-4" id="welcome">Welcome, @HttpContext.Session.GetString("FirstName")!</h1>
            
            <div class="card shadow-sm mb-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-person-circle me-2"></i>User Profile</h3>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">Full Name</dt>
                        <dd class="col-sm-9">@HttpContext.Session.GetString("FirstName") @HttpContext.Session.GetString("LastName")</dd>

                        <dt class="col-sm-3 text-muted">Gender</dt>
                        <dd class="col-sm-9">@HttpContext.Session.GetString("Gender")</dd>

                        <dt class="col-sm-3 text-muted">NRIC</dt>
                        <dd class="col-sm-9">@HttpContext.Session.GetString("NRIC")</dd>

                        <dt class="col-sm-3 text-muted">Email</dt>
                        <dd class="col-sm-9">@HttpContext.Session.GetString("Email")</dd>

                        <dt class="col-sm-3 text-muted">Date of Birth</dt>
                        <dd class="col-sm-9">@HttpContext.Session.GetString("DOB")</dd>

                        <dt class="col-sm-3 text-muted">Resume</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(HttpContext.Session.GetString("Resume")) && HttpContext.Session.GetString("Resume") != "N/A") {
                                <a href="/uploads/@HttpContext.Session.GetString("Resume")" 
                                class="text-decoration-none" 
                                   target="_blank">
                                    View Resume
                                </a>
                            } else {
                                <span class="text-muted">No resume uploaded</span>
                            }
                        </dd>

                        <dt class="col-sm-3 text-muted">About Me</dt>
                        <dd class="col-sm-9">@HttpContext.Session.GetString("WhoAmI")</dd>
                    </dl>
                </div>

                <div class="text-center mb-4">
                    <a class="btn btn-warning" href="/ChangePassword">Change Password</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        border: none;
    }
    
    dt {
        font-weight: 500;
        padding: 0.75rem 0;
    }
    
    dd {
        padding: 0.75rem 0;
        border-bottom: 1px solid #eee;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    
    .bi {
        font-size: 1.2rem;
    }

    #welcome {
        text-align: center;
    }
</style>
